<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        <trans oldtip=" Advanced Table " newtip="正在热映电影列表"> 正在热映电影列表</trans>
          <button id="btn-MovieHotAdd" class="btn btn-info" title="Bootstrap 3 themes generator "
            style="padding: 4px 12px;float:right">
            <span class="icon_plus_alt2"></span>
            <trans oldtip=" Info" newtip="添加">添加</trans>
          </button>
          <ul class="nav top-menu" style="padding:7px 24px;float:right">
            <li style="border: none;">
              <form class="navbar-form">
                <input id="Msearch" class="form-control" placeholder="搜索" type="text">
              </form>
            </li>
          </ul>
        
      </header>
      <table class="table table-striped table-advance table-hover">
        <tbody>
          <tr>
            <th><i class="icon_document_alt"></i>ID</th>
            <th><i class="fa fa-tachometer"></i>图片</th>
            <th><i class="icon_genius"></i>电影名称</th>
            <th><i class="icon_documents_alt"></i>简介</th>
            <th><i class="icon_piechart"></i>评分 </th>
            <th><i class="icon_profile"></i>观看人数</th>
            <th><i class="fa fa-user-md"></i>主演</th>
            <th><i class="icon_calendar"></i>上映时间</th>
            <th><i class="fa fa-home"></i>场次</th>
            <th><i class="fa fa-home"></i>操作</th>
          </tr>
          {{each list}}
          <tr>
            <td>{{$index + 1}}</td>
            <td><img style="width: 64px;height: 90px;" src="http://10.9.49.167:3000/uploads/{{$value.movieImg}}"></td>
            <td>{{$value.movieName}} </td>
            <td>
              <trans oldtip="CinemaLocation" newtip="影院位置"
                style="display: inline-block;width: 60px;white-space:nowrap;overflow:hidden; text-overflow: ellipsis;height:100%;line-height:100%;">
                {{$value.movieSynopsis}}</trans>
            </td>

            <td>{{$value.movieScore}}</td>
            <td>{{$value.movieWatch}}</td>
            <td>{{$value.movieStra}}</td>
            <td>{{$value.movieTime}}</td>
            <td>{{$value.movieNumber}}</td>
            <td>
              <div class="btn-group">
                <!-- <i class="btn btn-primary" href="#"><i class="icon_plus_alt2"></i></a> -->
                <button data-id="{{$value._id}}" type="button" class="btn btn-success btn-mupdata">
                  <span class="icon_check_alt2"></span>
                  <trans oldtip="Submit" newtip="修改">修改</trans>
                </button>
                <button data-id="{{$value._id}}" data-img={{$value.movieImg}} type="button"
                  class="btn btn-danger btn-mremove">
                  <span class="icon_close_alt2"></span>删除</button>
              </div>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      {{if list.length > 0 && from === 'list' }}
      <div id="box-footer" class="box-footer clearfix text-center">
        <ul class="pagination pagination-sm no-margin pull-right">
          <li><a href="javascript:void(0)" class="page-prev">&laquo;</a></li>
          {{each pageCount}}
          {{if currentPage === $value}}
          <li class="active">
            {{else}}
          <li>
            {{/if}}
            <a href="javascript:void(0)" class="page-number">{{$value}}</a></li>
          {{/each}}
          <li><a href="javascript:void(0)" class="page-next">&raquo;</a></li>
        </ul>
      </div>
      {{/if}}
  <!-- </div> -->
  </section>
</div>
</div>